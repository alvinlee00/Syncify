# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/auth/spotify/callback

# Apple Music API Credentials
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./your_private_key.p8

# Sign in with Apple Credentials
APPLE_SERVICE_ID=com.yourname.syncify
APPLE_SIGNIN_KEY_ID=your_signin_key_id
APPLE_SIGNIN_PRIVATE_KEY_PATH=./your_signin_key.p8
APPLE_SIGNIN_REDIRECT_URI=http://127.0.0.1:3000/auth/apple/callback

# Server Configuration
PORT=3000
SESSION_SECRET=your_session_secret_here

# Production URL (update when deploying)
# Examples: https://syncify.com, https://syncify.herokuapp.com
APP_URL=http://127.0.0.1:3000